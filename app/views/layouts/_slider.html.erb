<div id="myCarousel" class="carousel slide" data-ride="carousel">

  <!-- Wrapper for slides -->
  <div class="container-fluid">
    <div class="row">
      <div id="slider" class="col-sm-12">
        <div class="carousel-inner">

          <div class="item active">
            <%= image_tag("1111.jpg", alt: "", style: "width:100%") %>
          </div>

          <div class="item">
            <%= image_tag("2222.jpg", alt: "", style: "width:100%") %>
          </div>

          <div class="item">
            <%= image_tag("3333.jpg", alt: "", style: "width:100%") %>
          </div>

          <div class="item">
            <%= image_tag("4444.jpg", alt: "", style: "width:100%") %>
          </div>

          <div class="item">
            <%= image_tag("5555.jpg", alt: "", style: "width:100%") %>
          </div>



          <!-- Left and right controls -->
          <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
          </a>
          <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
          </a>
        </div>
      </div>
    </div>
  </div>
</div>
<!--Slider end-->
